{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["dom", "es2017", "esnext.array"]
  },
  "exclude": ["node_modules"],
  "typedocOptions": {
    "mode": "file",
    "out": "tsdoc",
    "exclude": "**/__mocks__/*.ts"
  }
}
